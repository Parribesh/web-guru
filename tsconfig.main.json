{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist/main",
    "rootDir": "./app"
  },
  "include": [
    "app/main/**/*",
    "app/shared/**/*",
    "app/cli/**/*"
  ],
  "exclude": [
    "app/renderer/**/*",
    "app/preload/**/*"
  ]
}
