{
  "name": "electron-ai-browser",
  "version": "1.0.0",
  "description": "AI-enhanced browser built with Electron",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:main": "tsc --project tsconfig.main.json --watch",
    "dev:preload": "tsc --project tsconfig.preload.json --watch",
    "dev:renderer": "webpack serve --config webpack.config.js --mode=development --hot --port 3000",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "build:renderer": "webpack --mode=production",
    "start": "NODE_ENV=development electron dist/main/main/index.js",
    "package": "electron-builder",
    "dist": "npm run build && npm run package"
  },
  "build": {
    "appId": "com.electron.aibrowser",
    "productName": "AI Browser",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron": "^26.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.0.0",
    "css-loader": "^6.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.0.0",
    "postcss": "^8.0.0",
    "postcss-loader": "^7.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "style-loader": "^3.0.0",
    "tailwindcss": "^3.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
