{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "./dist/renderer",
    "rootDir": "./app",
    "moduleResolution": "node"
  },
  "include": [
    "app/renderer/**/*",
    "app/shared/**/*"
  ],
  "exclude": [
    "app/main/**/*",
    "app/preload/**/*"
  ]
}
