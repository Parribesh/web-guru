{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/preload",
    "rootDir": "./app"
  },
  "include": [
    "app/preload/**/*",
    "app/shared/**/*"
  ],
  "exclude": [
    "app/main/**/*",
    "app/renderer/**/*"
  ]
}
